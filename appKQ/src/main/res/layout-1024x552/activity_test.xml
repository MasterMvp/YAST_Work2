<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    android:orientation="vertical">
 
<!--    
    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:orientation="vertical"
        >
-->  
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tips1" />
    <TextView
        android:id="@+id/tv2"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tips2" />
    
    
    
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:weightSum="3.0">

        <Button
        android:id="@+id/btn_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_device"
        android:layout_weight="1.0"
        />
        
     
    <Button
        android:id="@+id/btn_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/count_finger"
        android:layout_weight="1.0"
        />
    
    <Button
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/close_device"
        android:layout_weight="1.0"
        />
   
    </LinearLayout>
    
    
     <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2.0">
        
           <Button
        android:id="@+id/btn_guid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/device_guid"
        android:layout_weight="1.0"
        />
    
    
        
      <Button
        android:id="@+id/btn_capture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/finger_data"
        android:layout_weight="1.0"
        />
 
   </LinearLayout>
    
    
       
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="4.0"
        >
      	<EditText 
      	    android:id="@+id/edit_verify"
      	    android:layout_width="90dp"
      	    android:layout_height="wrap_content"
      	    android:hint="@string/please_enter_id"
      	    android:ellipsize="end"
      	    android:inputType="number"
      	    android:singleLine="true"
      	    android:layout_weight="1"
      	    />  

      	 <Button
      	     android:id="@+id/btn_verify"
      	     android:layout_width="wrap_content"
      	     android:layout_height="45dp"
      	     android:text="@string/verify" 
      	     android:layout_weight="1"/>
      	     
      	  <EditText 
      	    android:id="@+id/edit_delete"
      	    android:layout_width="90dp"
      	    android:layout_height="wrap_content"
      	    android:hint="@string/please_enter_id"
      	    android:ellipsize="end"
      	    android:inputType="number"
      	    android:singleLine="true"
      	    android:layout_weight="1"
      	    />  

      	 <Button
      	     android:id="@+id/btn_delete"
      	     android:layout_width="wrap_content"
      	     android:layout_height="45dp"
      	     android:text="@string/delete" 
      	     android:layout_weight="1"/>
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:weightSum="3.0">
    
      <Button
        android:id="@+id/btn_grab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/grab_image"
        android:layout_weight="1.0"
        android:visibility="gone"
        />
                
       <Button
        android:id="@+id/btn_verifyall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/all_verify"
        android:layout_weight="1.0"
        />
       <Button
        android:id="@+id/btn_enroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enroll_finger"
        android:layout_weight="1.0"
        />
       <Button
        android:id="@+id/btn_deleteall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/all_delete"
        android:layout_weight="1.0"
        />
       
       
   </LinearLayout>
   
 
     

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="10dp"
		android:visibility="gone"
		android:weightSum="3.0"
        >
       
        <EditText 
           android:id="@+id/edit_load"          
           android:layout_width="92dp"
           android:layout_height="wrap_content"
           android:layout_gravity="bottom"
           android:ellipsize="end"
   			android:hint="@string/please_enter_id"
            android:inputType="number"
            android:singleLine="true" 
            android:layout_weight="1"
            />
        
        <Button 
            android:id="@+id/btn_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/extract_fp"
             android:layout_weight="1.0"
            />
        
        <Button 
            android:id="@+id/btn_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stored_fp"
             android:layout_weight="1.0"
            />
        
    </LinearLayout>
    
  <LinearLayout 
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:visibility="gone"
      >
    
     <Button 
        android:id="@+id/btexternal_verify"
         android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/unibap_verify" 
        />
    
        <Button 
        android:id="@+id/btback"
         android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/swipe" 
        />

    

       <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/fp_transcoding" 
        />
        <TextView
        android:id="@+id/tv_base64fingerdata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

        <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fp_decode" 
        />
        
        <TextView
        android:id="@+id/tv_fingerdata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />
    
    </LinearLayout>

        
    <LinearLayout 
      	android:layout_width="fill_parent"
      	android:layout_height="fill_parent"
      	android:orientation="vertical"
    >
        <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:weightSum="2.0">
    
      <Button
        android:id="@+id/btn_loop_grab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loop_grab"
        android:layout_weight="1.0"
        />
                
       <Button
        android:id="@+id/btn_loop_grab_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loop_grab_cancel"
        android:layout_weight="1.0"
        />
       
   </LinearLayout>
 
   <ImageView 
        android:id="@+id/loop_grab_img"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="16dip"/>
        
  </LinearLayout>
   

 
    
 <!--   
  </LinearLayout>  
    
</ScrollView>
   -->  
   
    
</LinearLayout>